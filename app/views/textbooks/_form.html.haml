
.row.justify-content-center
  .col-md-6.text-start
    = form_with model: @textbook, local: true, html: { class: "needs-validation", novalidate: "" } do |form|
      .form-group.my-3
        = form.label :subject, "◾️科目"
        = form.select :subject, Textbook.subjects.keys.map { |k| [human_enum_name('textbook', 'subject', k), k] }, {}, { class: 'form-control' }
  
      .form-group.my-3
        = form.label :grade, "◾️学年"
        = form.select :grade, Textbook.grades.keys.map { |k| [human_enum_name('textbook', 'grade', k), k] }, {}, { class: 'form-control' }
  
      .form-group.my-3
        = form.label :texttitle, "◾️テキスト名"
        = form.select :texttitle, Textbook.texttitles.keys.map { |k| [human_enum_name('textbook', 'texttitle', k), k] }, {}, { class: 'form-control' }
  
      .form-group.my-3
        = form.label :notes, "◾️備考・その他のテキストの場合はテキスト名"
        = form.text_area :notes, class: "form-control"
    
    
      = form.submit "登録", class: "btn btn-primary button-class mt-3"
    = link_to "戻る", textbooks_path, class: "btn btn-secondary button-class my-5"