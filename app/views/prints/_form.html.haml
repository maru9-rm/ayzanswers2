
.row.justify-content-center
  .col-md-6.text-start
    = form_with model: print, local: true, html: { class: "needs-validation", novalidate: "" } do |form|
      .form-group.my-3
        = form.label :subject,"◾️教科", class: 'form-label'
        = form.select :subject, Print.subjects.keys.map { |k| [human_enum_name('print', 'subject', k), k] }, {}, { class: 'form-control' }
      .form-group.my-3
        = form.label :grade,"◾️学年", class: 'form-label'
        = form.select :grade, Print.grades.keys.map { |k| [human_enum_name('print', 'grade', k), k] }, {}, { class: 'form-control' }
      .form-group.my-3
        = form.label :title,"◾️プリント名など", class: 'form-label'
        = form.text_area :title, class: 'form-control'
      .form-group.my-3
        = form.label :notes,"◾️備考", class: 'form-label'
        = form.text_area :notes, class: 'form-control'
        
      
    
      .form-group.my-3
        = form.label :print_images,"◾️画像", class: 'form-label'
        = form.file_field :print_images, multiple: true, name: 'print[print_images][]', class: 'form-control'
        
      = form.submit "登録", class: 'btn btn-primary mt-3 form-control mt-5 mb-5 button-class '
      = link_to "戻る", prints_path, class: "btn btn-secondary button-class my-5"



  



        